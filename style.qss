QWidget {
    background-color: #f0f0f0;
    font-size: 14px;
    font-family: Arial, sans-serif;
}

QLineEdit {
    padding: 5px;
    border: 1px solid #ccc;
    border-radius: 5px;
}

QPushButton {
    padding: 8px 15px;
    background-color: #007BFF;
    color: white;
    border: none;
    border-radius: 5px;
}

QPushButton:hover {
    background-color: #0056b3;
}

QLabel {
    font-size: 16px;
    font-weight: bold;
}